<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/OldPassphrase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/account_changepassword_oldpassword"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/editNewPassphrase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/lock_screen_passphrase_hint"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/editConfirmPassphrase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/lock_screen_confirm_passphrase_hint"
        android:inputType="textPassword"/>



</LinearLayout>